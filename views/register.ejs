<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>注册</title>
    <link rel="stylesheet" href="/jsglobal/uikit/css/uikit.min.css"/>
    <script type="text/javascript" src="/jsglobal/jquery/dist/jquery.min.js"></script>
    <script type="text/javascript" src="/jsglobal/uikit/js/uikit.min.js"></script>
    <style type="text/css">
        #loading{
            display: none;
            width:100px;
            height:100px;
            border:1px solid red;
        }
    </style>
</head>
<body class="uk-height-1-1">
<div class="uk-vertical-align uk-text-center uk-height-1-1">
    <div class="uk-vertical-align-middle" style="width: 250px;">
        <img class="uk-margin-bottom" width="140" height="120" src="data:image/svg+xml;base64," alt="">
        <div></div>
        <form class="uk-panel uk-panel-box uk-form" id="form" action="/register" method="post">
            <div class="uk-form-row">
                <input class="uk-width-1-1 uk-form-large" id="userName" name="userName" type="text" placeholder="用户名">
            </div>
            <div class="uk-form-row">
                <input class="uk-width-1-1 uk-form-large" id="userPwd" name="userPwd" type="password" placeholder="密码">
            </div>
            <div class="uk-form-row">
                <input class="uk-width-1-1 uk-form-large" id="confirmUserPwd" name="confirmUserPwd" type="password" placeholder="确认密码">
            </div>
            <div class="uk-form-row">
                <!--<a class="uk-width-1-1 uk-button uk-button-primary uk-button-large" href="#">Login</a>-->
                <input class="uk-width-1-1 uk-button uk-button-primary uk-button-large" type="button" id="btnRegister" value="注册"/>
            </div>
            <div class="uk-form-row uk-text-small">
                <a class="uk-float-right uk-link uk-link-muted" href='/login'>直接登录</a>
            </div>
        </form>
    </div>
</div>
<div id="loading"></div>
</body>
<script type="text/javascript">
    $(document).ready(function () {
        $('#btnRegister').click(function(){
            var userName = $('#userName').val();
            var userPwd = $('#userPwd').val();
            var confirmUserPwd = $('#confirmUserPwd').val();
            if(userName == '' || userPwd == ''){
                alert('用户名或密码不能为空');
                return false;
            }
            if(userPwd != confirmUserPwd){
                alert('两次密码输入不一致');
                return false;
            }
            $.post('/register',{"userName":userName,"userPwd":userPwd,"userConfirmPwd":confirmUserPwd},function(data){
                if(!data.success){
                    alert(data.info);
                    return;
                }else{
                    window.location.href = "/index";
                }
            });
        });
    });
</script>
</html>